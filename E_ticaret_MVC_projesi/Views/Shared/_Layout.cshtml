<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My E-Ticaret Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript">
        var GB_ROOT_DIR = "../../greybox/";
    </script>
    <script type="text/javascript" src="~/greybox/AJS.js"></script>
    <script type="text/javascript" src="~/greybox/AJS_fx.js"></script>
    <script type="text/javascript" src="~/greybox/gb_scripts.js"></script>
    <link href="~/greybox/gb_styles.css" rel="stylesheet" type="text/css" />


</head>
<body>
    <table class="tablo">
        <tr>
            <td colspan="3" class="ustmenu">
                @*menü başladı *@
                <nav class="navbar navbar-expand-lg bg-body-tertiary">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="#">KAPATIYORUZ.COM</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#">ANA SAYFA</a>
                                </li>
                                @if (Session["uyem"] == null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("create","uyelers")">üYE OL</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">üYE Bilgileri GÜncelle</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("guv_cikis")">Güvenli Çıkış</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link" href="#">İLETİŞİM</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        KATEGORİLER
                                    </a>
                                    <ul class="dropdown-menu">

                                        @{ Html.RenderAction("kategori_doldur", "home");}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>

                @*menü bitti*@




            </td>
        </tr>
        <tr>
            <td colspan="2" class="icerik_td"><div class="icerik">@RenderBody()</div></td>
            <td width="25%">
                <div class="div1">
                    @ViewBag.giris_sonuc
                    @{ Html.RenderPartial("~/Views/Home/login_giris.cshtml");}

                </div>
            </td>
            </td>
        </tr>
        <tr>
            <td colspan="3" class="altbilgi_td"><div class="div2">Alt bilgi</div></td>
        </tr>
    </table>




    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/bootstrap.bundle.js"></script>

</body>
</html>
